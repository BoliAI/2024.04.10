cat iscii_map.csv |\
sed 's/\("[^\"]*\),\([^\"]*"\)/\1;\2/g' |\
awk -F',' 'BEGIN { printf "%{\n%}\n%%%%\n" }\
           /.*/  { if ($4 != "")\
                   { printf $4;\
                     for(i=6;i<NF;i+=2)\
                       { if($i != "") printf "|" $i }\
                     print "    {printf(\"" $4 "\");}"\
                    }\
                  }'

