<शैली श्रेणी>
#समावेश <मानकपन.स>

श्रेणी जानवर
{
खुला:
	भव व्योम लिखो()
	{
		म_लिखो("यह एक जानवर है।\n");
	}
};

श्रेणी शेर : खुला जानवर
{
खुला:
	व्योम लिखो()
	{
		म_लिखो("शेर एक जानवर है।\n");
	}
};

श्रेणी चीता : खुला जानवर
{
खुला:
	व्योम लिखो()
	{
		म_लिखो("चीता एक जानवर है।\n");
	}
};

पूर्णांक मुख्य()
{
	जानवर ज, *ज१;
	शेर श;
	चीता च;

	ज.लिखो();
	श.लिखो();
	च.लिखो();

	ज१=&ज;
	ज१->लिखो();
	ज१=&श;
	ज१->लिखो();
	ज१=&च;
	ज१->लिखो();

	वापस 0;
}
